@page
@model IdentityServerHost.Pages.Login.Index
@{
    Layout = "_LoginLayout";

}
<video autoplay muted loop playsinline id="bg-video">
    <source src="~/background.mp4" type="video/mp4">
    Your browser does not support the video tag.
</video>
<div class="overlay"></div>
<!-- Login Form -->
<div class="login-container">
    <h2> <img src="~/logo2.gif" alt="Logo" class="icon-banner" /> The Rushmore Group</h2>
       <form asp-page="/Account/Login/Index">
            <input type="hidden" asp-for="Input.ReturnUrl" />
              <input  placeholder="Username" asp-for="Input.Username" autofocus>
              <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
              <button type="submit" name="Input.Button" value="login">Sign In</button>
       </form>
</div>